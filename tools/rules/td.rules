# TD Canada Trust - Chequing/Savings Account
# Export: Online Banking → Accounts → Download → CSV
#
# CSV Format (no header):
#   Date, Description, Debit, Credit, Balance
#   "2025-01-15","TIM HORTONS","5.50",,"100.00"

# No header row
skip 0

# Column mapping
fields date, description, amount-out, amount-in, _

# Date format: YYYY-MM-DD
date-format %Y-%m-%d

# Currency
currency $

# Your account (customize this)
account1 assets:bank:td:chequing

# Default category for unmatched transactions
account2 expenses:uncategorized

# ============================================================================
# AUTO-CATEGORIZATION RULES
# Add your own patterns below
# ============================================================================

# Income
if E-TRANSFER.*FROM
  account2 income:transfers

if PAYROLL
  account2 income:salary

if DEPOSIT
  account2 income:other

# Transfers
if SEND E-TFR
  account2 expenses:transfers

if TFR-TO
  account2 expenses:transfers

if TFR-FR
  account2 income:transfers

# Food & Dining
if TIM HORTONS
  account2 expenses:food:coffee

if STARBUCKS
  account2 expenses:food:coffee

if MCDONALD
  account2 expenses:food:dining

if A&W
  account2 expenses:food:dining

if SUBWAY
  account2 expenses:food:dining

if SKIPTHEDISHES
  account2 expenses:food:delivery

if UBER EATS
  account2 expenses:food:delivery

if DOORDASH
  account2 expenses:food:delivery

# Shopping
if AMAZON
  account2 expenses:shopping:amazon

if WALMART
  account2 expenses:shopping:groceries

if COSTCO
  account2 expenses:shopping:groceries

if SUPERSTORE
  account2 expenses:shopping:groceries

if SHOPPERS
  account2 expenses:shopping:pharmacy

# Transportation
if ESSO
  account2 expenses:auto:gas

if PETRO
  account2 expenses:auto:gas

if SHELL
  account2 expenses:auto:gas

if PRESTO
  account2 expenses:transit

# Subscriptions
if NETFLIX
  account2 expenses:subscriptions

if SPOTIFY
  account2 expenses:subscriptions

if APPLE.COM
  account2 expenses:subscriptions

if GOOGLE
  account2 expenses:subscriptions

# Fees
if MONTHLY.*FEE
  account2 expenses:bank:fees

if SERVICE CHARGE
  account2 expenses:bank:fees

if INTERAC FEE
  account2 expenses:bank:fees
